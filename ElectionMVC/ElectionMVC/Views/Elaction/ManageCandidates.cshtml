@{
    Layout = "";
}
<html>
<head>
    <title>Gerenciar Candidatos</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/fontawesome-free-5.15.3-web/css/all.min.css">
    <link rel="stylesheet" href="/lib/toastr/toastr.min.css">
    <link rel="stylesheet" href="/lib/jspanel/jspanel.min.css">
    <link rel="stylesheet" href="/css/managecandidates.css">
    <link rel="stylesheet" href="/lib/confirm-jquery/jquery-confirm.min.css">
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/toastr/toastr.min.js"></script>
    <script src="/lib/toastr/factory.js"></script>
    <script src="/lib/confirm-jquery/jquery-confirm.min.js"></script>
    <script src="/lib/jspanel/jspanel.min.js"></script>
    <style>
        ::-webkit-scrollbar-track {
            box-shadow: inset 0 0 5px grey !important;
            border-radius: 10px !important;
            background: #cecaca !important;
        }

        ::-webkit-scrollbar-thumb {
            background: #6d6c6c !important;
            border-radius: 10px !important;
        }

        ::-webkit-scrollbar {
            width: 7px !important;
            height: 6px !important;
        }

        .scrollable {
            overflow: auto;
        }

        .table-dark > tr > td {
            text-align: center;
        }
    </style>
</head>
<body style="user-select: none;">
    <div class="m-auto" style="max-width: 950px;height: 4.2rem;">
        <nav class="navbar navbar-light" style="background-color: #3e1775;border: solid 3px #7918ff;border-top: none">
            <span style="font-size: 2rem;color: white;" class="m-auto">Candidatos</span>
        </nav>
        <section style="height: calc(100vh - 4.2rem);background: #e7d5ff;border-left: solid 2px;border-right: solid 2px;">
            <div class="row mx-2 justify-content-end d-flex">
                <a class="btn btn-danger m-2" style="width: fit-content;" href="/Eleicao/Votar">Voltar</a>
                <button class="btn btn-primary my-2" style="width: fit-content;" id="AddCandidate">Adicionar</button>
            </div>
            <div class="mx-2 col">
                <table class="table m-0">
                    <thead class="table-dark">
                        <tr>
                            <td class="col-2">Legenda</td>
                            <td class="col-2">Partido</td>
                            <td class="col-3">Candidato</td>
                            <td class="col-3">Vice</td>
                            <td class="col-2">Excluir</td>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="scrollable ml-4" style="height: calc(100vh - 11rem);width: calc(100% - 2rem);">
                <table class="table table-bordered">
                    <tbody class="table-bordered table-secondary">
                    </tbody>
                </table>
            </div>
        </section>
    </div>
    <script src="~/js/ManageCandidates.js"></script>
    <script>
        new ManageCandidates('@ViewBag.ApiUrl').Init();
    </script>
</body>
</html>